                        <li>
                            <a class="waves-effect waves-dark" href="#" aria-expanded="false"><i class="bi bi-cash"></i><span class="hide-menu">Gastos</span></a>
                        </li>
                        
                        <li class="nav-devider"></li>
                        <li class="nav-small-cap">ADMINISTRACIÓN</li>
                        <li>
                            <a class="waves-effect waves-dark" href="#" aria-expanded="false"><i class="bi bi-file-earmark-text"></i><span class="hide-menu">Facturación</span></a>
                        </li>
                        <li>
                            <a class="waves-effect waves-dark" href="#" aria-expanded="false"><i class="bi bi-graph-up"></i><span class="hide-menu">Estadísticas</span></a>
                        </li>
                    </ul>
                </nav>
                <!-- End Sidebar navigation -->
            </div>
        </div>
        <!-- End Sidebar scroll-->
    </aside> 
